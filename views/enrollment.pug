                  br
                  input.form-control(type='date', placeholder='회의 날짜' name="meet_date")
                  br
                  .filebox
                    input.upload-name(value='선택된 파일 없음', name='meet_voice', disabled='disabled')
                    label(for='ex_filename',) &#xD68C;&#xC758; &#xD30C;&#xC77C; &#xC120;&#xD0DD;
                    input#ex_filename.upload-hidden(type='file', name='wavFile', accept='audio/*')
                  br
                  br

                  // 초대기능
                  h4 &#xD68C;&#xC758; &#xACF5;&#xC720;
                  .input-group
                    span.input-group-addon
                      i.fa.fa-user
                    input.form-control(placeholder='UserID', type='text', name ='shareID')
                  br
                  .input-group
                    span.input-group-addon
                      i.fa.fa-user
                    input.form-control(placeholder='UserID', type='text', name ='shareID')
                  br
                  .input-group
                    span.input-group-addon
                      i.fa.fa-user
                    input.form-control(placeholder='UserID', type='text', name ='shareID')
                  br
                  br

                  // HASHTAG
                  .content
                    table(class='table')
                      table#tag-list
                        h4 &#xD0DC;&#xADF8; &#xBAA9;&#xB85D;
                      div
                        input#tag.form-control.right_button(type='text', size='12', maxlength='12', placeholder='태그입력', name='tagname1')
                        | &nbsp;
                        input#tag.form-control.right_button(type='text', size='12', maxlength='12', placeholder='태그입력', name='tagname2')
                        | &nbsp;
                        input#tag.form-control.right_button(type='text', size='12', maxlength='12', placeholder='태그입력', name='tagname3')
                  // END HASHTAG
                  br
                  input#selectlist.btn.btn-primary(type='submit')


                  br
                  //- table
                  //-   tr tr값
                  //-     -for(var j = 0 ; j < row + 2 ; j++)
                  //-       td 
                  //-         | 확인용 #{j}
                  table.listcheck(border='1')
                    tr
                      -for(var j = 0 ; j < row; j++)
                        td 
                          |#{meeting_data[j].meet_name}
                // END 회의정보 등록
