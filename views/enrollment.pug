script.
  $('#selectlist').click(function(){

    var title;
    title = ' ' + $('input[name=meet_title]').val();

    var check = 0;


    if(title == ' '){
      alert("제목을 입력하세요");
    }
    else{
      for(var j = 0; j < #{row}; j++){
        var name;
        name = document.getElementsByTagName('td')[j].childNodes[0].nodeValue;
        if(title == name){
          check = 1;
          alert("이미 등록된 제목 입니다.");
        }
      }
      if(title != " " && check == 0){
        alert("사용할 수 있는 제목입니다.");
      }
    }
  });
